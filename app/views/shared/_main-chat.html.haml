.chat-main
   .group-info
      .group-area
         %p.group__name  
            = @group.name
         %ul.member  Member:
         %li.members-name
            - @group.users.each do |user|
               = user.name
      = link_to "/groups/1/edit" do
         .edit  Edit
   .message 
      = render @messages
   .chat-main__message-form 
      = form_for [@group, @message] do |f|
         = f.text_field :content, class: 'chat-main__message-form__input-box', placeholder: 'type a message'
         .chat-main__message-form__input-box__text
            = f.label :image, class: 'chat-main__message-form__input-box__text__image' do
               = icon('fas', 'image', class: 'icon')
               = f.file_field :image, class: 'hidden'
         = f.submit 'Send', class: 'chat-main__message-form__input-box__send'



